declare name "Embedded Platform Library";
declare version "0.1";

//---------------------------------`(pl.)SR`---------------------------------------
// Current sampling rate. Constant during program execution.
//-----------------------------------------------------------------------------
SR = 48000;

//---------------------------------`(pl.)BS`---------------------------------------
// Current block-size. Can change during the execution.
//-----------------------------------------------------------------------------
BS = fvariable(int count, <math.h>);

//---------------------------------`(pl.)tablesize`---------------------------------------
// Oscillator table size
//-----------------------------------------------------------------------------
tablesize = 1 << 8;
